{
  "name": "explain-my-code",
  "displayName": "Explain My Code",
  "description": "Explain selected code using an LLM API.",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:explainMyCode.explain"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "explainMyCode.explain",
        "title": "Explain My Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "explainMyCode.explain",
          "when": "editorHasSelection",
          "group": "navigation@100"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "typescript": "^4.7.4",
    "eslint": "^8.0.0",
    "@types/node": "^16.0.0",
    "vsce": "^2.10.0"
  },
  "dependencies": {}
} 